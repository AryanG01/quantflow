{
  "__inputs": [],
  "__requires": [
    {"type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0"},
    {"type": "panel", "id": "timeseries", "name": "Time series", "version": ""},
    {"type": "panel", "id": "stat", "name": "Stat", "version": ""},
    {"type": "panel", "id": "gauge", "name": "Gauge", "version": ""}
  ],
  "annotations": {"list": []},
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "id": 100,
      "title": "Portfolio",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"lineWidth": 2},
          "unit": "currencyUSD"
        }
      },
      "gridPos": {"h": 8, "w": 16, "x": 0, "y": 1},
      "id": 1,
      "options": {"tooltip": {"mode": "single"}},
      "targets": [
        {
          "expr": "trading_equity_usd",
          "legendFormat": "Equity (USD)",
          "refId": "A"
        }
      ],
      "title": "Portfolio Equity",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.05},
              {"color": "orange", "value": 0.10},
              {"color": "red", "value": 0.15}
            ]
          },
          "unit": "percentunit",
          "max": 0.20,
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 1},
      "id": 2,
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "orientation": "auto"},
      "targets": [
        {
          "expr": "trading_drawdown_pct",
          "legendFormat": "Drawdown",
          "refId": "A"
        }
      ],
      "title": "Current Drawdown",
      "type": "gauge"
    },
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
      "id": 101,
      "title": "Signals & Regime",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"lineWidth": 2},
          "min": -1,
          "max": 1
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
      "id": 3,
      "options": {"tooltip": {"mode": "multi"}},
      "targets": [
        {
          "expr": "trading_signal_strength",
          "legendFormat": "{{symbol}}",
          "refId": "A"
        }
      ],
      "title": "Signal Strength by Symbol",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "blue", "value": null},
              {"color": "green", "value": 1},
              {"color": "orange", "value": 2}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "Trending"}}, "type": "value"},
            {"options": {"1": {"text": "Mean-Reverting"}}, "type": "value"},
            {"options": {"2": {"text": "Choppy"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10},
      "id": 4,
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "colorMode": "background"},
      "targets": [
        {
          "expr": "trading_regime",
          "legendFormat": "Regime",
          "refId": "A"
        }
      ],
      "title": "Current Market Regime",
      "type": "stat"
    },
    {
      "collapsed": false,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18},
      "id": 102,
      "title": "Orders & Risk",
      "type": "row"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {"color": {"mode": "palette-classic"}, "unit": "short"}
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 19},
      "id": 5,
      "options": {"tooltip": {"mode": "multi"}},
      "targets": [
        {
          "expr": "increase(trading_orders_total[1h])",
          "legendFormat": "{{side}} {{status}}",
          "refId": "A"
        }
      ],
      "title": "Orders per Hour",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 1}
            ]
          },
          "mappings": [
            {"options": {"0": {"text": "ACTIVE", "color": "green"}}, "type": "value"},
            {"options": {"1": {"text": "TRIGGERED", "color": "red"}}, "type": "value"}
          ]
        }
      },
      "gridPos": {"h": 4, "w": 12, "x": 12, "y": 19},
      "id": 6,
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}, "colorMode": "background"},
      "targets": [
        {
          "expr": "trading_drawdown_pct > 0.15",
          "legendFormat": "Kill Switch",
          "refId": "A"
        }
      ],
      "title": "Kill Switch Status",
      "type": "stat"
    },
    {
      "datasource": {"type": "prometheus", "uid": "${datasource}"},
      "fieldConfig": {
        "defaults": {"color": {"mode": "palette-classic"}, "unit": "short"}
      },
      "gridPos": {"h": 4, "w": 12, "x": 12, "y": 23},
      "id": 7,
      "options": {"tooltip": {"mode": "multi"}},
      "targets": [
        {
          "expr": "increase(trading_rejections_total[1h])",
          "legendFormat": "{{reason}}",
          "refId": "A"
        }
      ],
      "title": "Risk Rejections per Hour",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "tags": ["quantflow", "trading"],
  "templating": {
    "list": [
      {
        "current": {"text": "Prometheus", "value": "prometheus"},
        "hide": 0,
        "includeAll": false,
        "name": "datasource",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      }
    ]
  },
  "time": {"from": "now-24h", "to": "now"},
  "timepicker": {},
  "timezone": "browser",
  "title": "QuantFlow Trading System",
  "uid": "quantflow-v1",
  "version": 1
}
